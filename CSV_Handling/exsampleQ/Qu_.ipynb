   "source": [
    "with open(\"input.txt\", \"r\") as file_1, open(\"even_lines.txt\", \"w\") as file_2:\n",
    "    line_number = 1\n",
    "\n",
    "    for line in file_1:\n",
    "        if line_number % 2 == 0:       # even line\n",
    "            file_2.write(line)\n",
    "        line_number += 1\n"
   ]
